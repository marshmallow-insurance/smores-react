{
  "name": "@mrshmllw/smores-react",
  "version": "14.1.0",
  "main": "./dist/index.js",
  "description": "Collection of React components used by Marshmallow Technology",
  "type": "module",
  "keywords": [
    "react",
    "components",
    "design system",
    "component library"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./beta": {
      "types": "./dist/beta/index.d.ts",
      "default": "./dist/beta/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc --p ./tsconfig.build.json",
    "build-storybook": "storybook build -c .storybook",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --fix",
    "prepublishOnly": "npm run build",
    "start": "npm run storybook",
    "storybook": "storybook dev -p 6006",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "npm run test-storybook --maxWorkers=2",
    "test:coverage": "vitest --coverage --silent",
    "test:watch": "vitest --watch --silent",
    "test": "vitest --silent",
    "updateSnaps": "vitest --u",
    "snyk-protect": "snyk-protect",
    "prepare": "npm run snyk-protect && husky",
    "pre-commit-lint": "npm run check-types && lint-staged",
    "commitlint": "commitlint --edit",
    "fix-package-lock-conflicts": "echo \"Make sure conflicts in package.json are resolved before running this script\" && npm i --package-lock-only"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@mrshmllw/campfire": "^2.3.1",
    "@snyk/protect": "^1.1301.1",
    "@storybook/addon-a11y": "^10.1.5",
    "@storybook/addon-coverage": "^3.0.0",
    "@storybook/addon-docs": "^10.1.5",
    "@storybook/addon-links": "^10.1.5",
    "@storybook/react-vite": "^10.1.5",
    "@storybook/test-runner": "^0.24.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/body-scroll-lock": "^3.1.2",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "10.1.5",
    "husky": "^9.1.7",
    "jest-styled-components": "^7.2.0",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.1",
    "rimraf": "^6.1.2",
    "storybook": "^10.0.8",
    "styled-components": "^6.1.19",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@floating-ui/react": "0.27.16",
    "@lexical/react": "^0.38.2",
    "@mrshmllw/smores-foundations": "^1.1.0",
    "body-scroll-lock": "^4.0.0-beta.0",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "fuse.js": "^7.1.0",
    "lexical": "^0.38.2",
    "polished": "^4.3.1"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18 || ^19",
    "react-dom": "^16.8.0 || ^17 || ^18 || ^19"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marshmallow-insurance/smores-react.git"
  },
  "author": "Todor Tsankov",
  "license": "MIT",
  "homepage": "https://github.com/marshmallow-insurance/smores-react#readme",
  "snyk": true
}
