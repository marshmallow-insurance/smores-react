{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "./dist"
  },
  "exclude": [
    "src/**/*/__tests__",
    "src/**/*.stories.tsx",
    "src/**/storybook",
    "**/__tests__/*",
    "**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/storybook/*",
    "node_modules",
    "dist",
    "scripts",
    "vite.config.ts",
    "vitest.config.ts",
    "commitlint.config.ts"
  ]
}
